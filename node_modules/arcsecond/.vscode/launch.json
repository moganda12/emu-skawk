{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Debug File",
        "program": "${file}"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Testware Debug",
      "program": "${file}"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "TS Debug",
      "runtimeArgs": [
          "-r",
          "ts-node/register"
      ],
      "args": [
          "${file}"
      ],
      "runtimeExecutable": "/home/francis/.nvm/versions/node/v16.9.1/bin/node"
    },
    {
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "name": "TS Test",
      "args": [
        "mocha",
        "--reporter",
        "spec",
        "--require",
        "ts-node/register",
        //  "test/**/*.ts"
        "${file}"
      ],
    }
  ]
}